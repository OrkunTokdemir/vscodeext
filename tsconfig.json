{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "ES2020",
    "types": ["node"],
    "outDir": "out",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true /* enable all strict type-checking options */,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@cmd/*": ["src/commands/*"],
      "@task/*": ["src/tasks/*"],
      "@util/*": ["src/util/*"]
    }
  },
  "include": ["src/**/*"]
}
